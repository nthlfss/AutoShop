@model List<AutoShop.Models.Customer>


<h1>Customers</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Car</th>
    </tr>

    @foreach (var customer in Model)
    {
        <tr>
            <td><a asp-controller="Customer" asp-action="Index" asp-route-id="@customer.ID">@customer.FirstName @customer.LastName</a></td>
            <td>@customer.Cars</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No customers yet!</p>
}

<p><a asp-controller="Customer" asp-action="Add">Add</a> | <a asp-controller="Customer" asp-action="Remove">Remove</a></p>
